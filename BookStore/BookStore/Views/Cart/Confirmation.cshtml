@model Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container">
    <div class="text-center">
        <h1>Order Confirmed!</h1>
        <div class="alert alert-success">
            <h4>Thank you for your order!</h4>
            <p>Your order has been placed successfully.</p>
        </div>

        <div class="card">
            <div class="card-body">
                <h5>Order Details</h5>
                <p><strong>Order #:</strong> @Model.Id</p>
                <p><strong>Customer:</strong> @Model.CustomerName</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Order Date:</strong> @Model.OrderDate.ToString("MMM dd, yyyy")</p>
                <p><strong>Total Amount:</strong> $@Model.TotalAmount</p>
                <p><strong>Status:</strong> @Model.Status</p>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-body">
                <h5>Order Items</h5>
                @foreach (var item in Model.OrderItems)
                {
                    <div class="border-bottom pb-2 mb-2">
                        <p><strong>@item.BookTitle</strong></p>
                        <p>Quantity: @item.Quantity × $@item.Price = $@(item.Quantity* item.Price)</p>
                    </div>
                }
                <h5 class="mt-3">Total: $@Model.TotalAmount</h5>
            </div>
        </div>

        <div class="mt-4">
            <a href="/Books" class="btn btn-primary">Continue Shopping</a>
        </div>
    </div>
</div>