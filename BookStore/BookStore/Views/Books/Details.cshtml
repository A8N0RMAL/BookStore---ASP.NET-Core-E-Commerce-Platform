@model Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="container">
    <div class="row">
        <div class="col-12 mb-3">
            <a href="/Books" class="btn btn-secondary">← Back to Books</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title">
            }
            else
            {
                <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 300px;">
                    <span class="text-muted">No Image</span>
                </div>
            }
        </div>

        <div class="col-md-8">
            <h1>@Model.Title</h1>
            <p class="h4 text-muted">by @Model.Author</p>

            <div class="mb-3">
                <span class="badge bg-primary">@Model.Category</span>
            </div>

            <div class="mb-3">
                <h3 class="text-success">$@Model.Price</h3>
            </div>

            <div class="mb-3">
                @if (Model.StockQuantity > 0)
                {
                    <span class="text-success">✓ In Stock (@Model.StockQuantity available)</span>
                }
                else
                {
                    <span class="text-danger">✗ Out of Stock</span>
                }
            </div>

            <div class="mb-4">
                <h4>Description</h4>
                <p>@Model.Description</p>
            </div>

            <div class="mb-4">
                @if (Model.StockQuantity > 0)
                {
                    <form method="post" action="/Cart/Add">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Add to Cart</button>
                            <a href="/Cart" class="btn btn-success btn-lg">View Cart</a>
                        </div>
                    </form>
                }
                else
                {
                    <button class="btn btn-secondary btn-lg" disabled>Out of Stock</button>
                }
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Book Information</h5>
                    <p><strong>Title:</strong> @Model.Title</p>
                    <p><strong>Author:</strong> @Model.Author</p>
                    <p><strong>Category:</strong> @Model.Category</p>
                    <p><strong>Price:</strong> $@Model.Price</p>
                    <p><strong>Stock:</strong> @Model.StockQuantity items available</p>
                </div>
            </div>
        </div>
    </div>
</div>
