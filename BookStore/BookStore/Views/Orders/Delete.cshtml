@model Order

@{
    ViewData["Title"] = "Delete Order";
}

<div class="container">
    <h1 class="text-danger">Delete Order</h1>

    <div class="alert alert-danger">
        <h5>Are you sure you want to delete this order?</h5>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card">
        <div class="card-body">
            <p><strong>Order ID:</strong> @Model.Id</p>
            <p><strong>Customer:</strong> @Model.CustomerName</p>
            <p><strong>Total:</strong> $@Model.TotalAmount</p>
            <p><strong>Date:</strong> @Model.OrderDate.ToString("MMM dd, yyyy")</p>
            <p><strong>Items:</strong> @Model.OrderItems.Count</p>
        </div>
    </div>

    <form method="post" action="/Orders/Delete/@Model.Id" class="mt-3">
        <button type="submit" class="btn btn-danger">Delete Order</button>
        <a href="/Orders" class="btn btn-secondary">Cancel</a>
    </form>
</div>